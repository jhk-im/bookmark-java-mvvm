<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".popup.EditAddItemPopupActivity"
    tools:openDrawer="start"
    android:orientation="vertical">

    <!-- editItem view -->
    <LinearLayout
        android:id="@+id/popup_edit_item_container"
        android:background="#eeeeee"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/content_linear"
        app:layout_anchorGravity="center" >

        <!-- 타이틀 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_edit_item_title"
                android:textSize="20sp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/category_touch_feedback"
            android:text="편집"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/category_touch_feedback"
            android:text="삭제"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/category_touch_feedback"
            android:text="공유"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/category_touch_feedback"
            android:text="확인"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <!-- addItem fragment view -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_anchor="@+id/content_linear"
                app:layout_anchorGravity="center" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>


