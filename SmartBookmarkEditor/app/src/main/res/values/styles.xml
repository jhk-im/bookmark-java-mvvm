<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme" />
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- default color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--custom-->
        <item name="custom_item_background">#353738</item>
        <item name="custom_background">#ffffff</item>
        <item name="custom_text">@color/colorPrimaryDark</item>
    </style>
    <!-- popup theme -->
    <style name="AppTheme.Popup" parent="Base.PopupTheme" />
    <style name="Base.PopupTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- default color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--custom-->
        <item name="custom_item_background">#353738</item>
        <item name="custom_background">#ffffff</item>
        <item name="custom_text">@color/colorPrimaryDark</item>
        <!-- 타이틀 바 제거 -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- toolbar -->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />



    <!-- Dark Theme Popup -->
    <style name="DarkAppPopup" parent="Base.PopupTheme">
        <item name="colorPrimary">#26518a</item>
        <item name="colorPrimaryDark">#353738</item>
        <item name="colorAccent">#8e4ab1</item>
        <!--custom-->
        <item name="custom_item_background">#353738</item>
        <item name="custom_background">@color/colorPrimaryDark</item>
        <item name="custom_text">#ffffff</item>
        <!-- 타이틀 바 제거 -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <!-- Dark Theme Main , Item touch-->
    <style name="DarkAppTheme" parent="Base.AppTheme">
        <item name="colorPrimary">#26518a</item>
        <item name="colorPrimaryDark">#353738</item>
        <item name="colorAccent">#8e4ab1</item>
        <!--custom-->
        <item name="custom_item_background">#353738</item>
        <item name="custom_background">@color/colorPrimaryDark</item>
        <item name="custom_text">#ffffff</item>
    </style>


    <!-- 반투명 -->
    <style name="Transparent" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">false</item>
        <!-- 투명정도를 나타내는 색-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!-- true - 반투명 검정 /  false - 완전 투명 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
